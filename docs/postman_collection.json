{
  "info": {
    "name": "ticket-seckill-backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /healthz",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/healthz", "host": ["{{baseUrl}}"], "path": ["healthz"] }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "POST /admin/events",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Concert A\",\n  \"starts_at\": \"2026-01-01T12:00:00Z\",\n  \"ends_at\": \"2026-01-01T14:00:00Z\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/admin/events", "host": ["{{baseUrl}}"], "path": ["admin", "events"] }
          }
        },
        {
          "name": "GET /events",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/events", "host": ["{{baseUrl}}"], "path": ["events"] }
          }
        },
        {
          "name": "POST /admin/events/:eventId/ticket_types",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"VIP\",\n  \"price_cents\": 19900,\n  \"inventory_total\": 100,\n  \"sale_starts_at\": \"2026-01-01T10:00:00Z\",\n  \"sale_ends_at\": \"2026-01-01T13:59:59Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/events/{{eventId}}/ticket_types",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "events", "{{eventId}}", "ticket_types"]
            }
          }
        },
        {
          "name": "GET /events/:eventId/ticket_types",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}/ticket_types",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}", "ticket_types"]
            }
          }
        }
      ]
    },
    {
      "name": "Seckill",
      "item": [
        {
          "name": "POST /seckill (Idempotency)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "idempotency-key", "value": "demo-key-1" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"user-001\",\n  \"ticket_type_id\": \"{{ticketTypeId}}\",\n  \"qty\": 1\n}"
            },
            "url": { "raw": "{{baseUrl}}/seckill", "host": ["{{baseUrl}}"], "path": ["seckill"] }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "GET /orders/:orderId",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/orders/{{orderId}}", "host": ["{{baseUrl}}"], "path": ["orders", "{{orderId}}"] }
          }
        },
        {
          "name": "POST /orders/:orderId/pay",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/orders/{{orderId}}/pay", "host": ["{{baseUrl}}"], "path": ["orders", "{{orderId}}", "pay"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "eventId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "ticketTypeId", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "orderId", "value": "00000000-0000-0000-0000-000000000000" }
  ]
}
